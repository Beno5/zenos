<div class="container">
  <h2 class="font-weight-bold text-color-dark text-9 mb-4">
    <%= @post.new_record? ? 'Create new post' : 'Edit post' %>
  </h2>

  <div class="field mb-4">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="field mb-4">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'tinymce form-control' %>
  </div>

  <div class="mb-4">
    <div class="row">
      <div class="col-md-6">
        <label class="btn btn-secondary btn-sm">
          <i class="fa-solid fa-upload me-2"></i> Upload Main Image
          <%= f.file_field :main_image, id: "main_image", style: 'display: none' %>
        </label>
      </div>
      <div class="col-md-6">
        <%= image_tag(@post.main_image, class: 'img-fluid img-thumbnail img-thumbnail-no-borders rounded shadow', style: "width: 100%", alt: '') if @post.main_image.attached? %>
        <% if @post.main_image.attached? %>
          <button class="btn btn-danger btn-sm" id="remove-main-image">
            <i class="fa-solid fa-times me-2"></i> Remove
          </button>
        <% end %>
      </div>
    </div>
    <div style="margin-top: 10px;"></div> <!-- Dodajemo marginu između Remove dugmeta i slike -->
  </div>

  <div id="main_image_preview">
    <!-- Prikaz glavne slike -->
  </div>

  <div class="my-4">
    <div class="row">
      <div class="col-md-6">
        <label class="btn btn-secondary btn-sm ">
          <i class="fa-solid fa-upload me-2"></i> Add Secondary Images
          <%= f.file_field :secondary_images, multiple: true, id: "secondary_images", style: 'display: none' %>
        </label>
      </div>
    </div>
  </div>

  <div id="secondary_images_preview" class="row flex-row my-2">
    <!-- Prikaz sporednih slika -->
    <% @post.secondary_images.each do |image| %>
      <div class="col-md-3">
        <%= image_tag(image, class: 'img-fluid img-thumbnail img-thumbnail-no-borders rounded shadow', style: 'width: 100%', alt: '') %>
        <div style="margin-top: 10px;"></div> <!-- Dodajemo marginu između Remove dugmeta i slike -->
        <button class="btn btn-danger btn-sm remove-secondary-image">
          <i class="fa-solid fa-times me-2"></i> Remove
        </button>
      </div>
    <% end %>
  </div>
</div>

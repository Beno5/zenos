						</div>
					</div>
				</div>

			</section>
<div class="container py-5 mt-4">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <div class="featured-box featured-box-primary text-start mt-0">
        <div class="box-content">
          <h2>Login</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "frmSignIn", method: :post, class: "needs-validation" }) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { class: "form-control form-control-lg", autocomplete: "email" } %>
              <%= f.input :password,
                          required: false,
                          input_html: { class: "form-control form-control-lg", autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions d-flex justify-content-end">
              <%= f.button :submit, "Log in", class: "btn btn-primary btn-modern", "data-loading-text" => "Loading..." %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-3"></div>
  </div>
</div>





	</div>
</div>
